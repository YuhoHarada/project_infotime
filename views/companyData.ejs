<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/userFormStyle.css">
    <link rel="stylesheet" href="/styleCompany.css">
    <title>Document</title>
</head>

<body id="companyAbout" class="companyData">
    <header class="header">
        <img src="/img/arrow.svg" alt="">
        <img src="/img/clock.svg" alt="">
        <img id="toggleCompanyProfile" src="<%= user.picture %> " alt="">
        <section id="showUserProfile" class="hide" style="z-index: 999">
            <ul>
                <li class="profilename"><%= user.firstName %> <%= user.lastName %></li>
                <li><a href="/company">Dashboard</a></li>
                <li><a href="/company/settings">Settings</a></li>
                <li><a href="/company/faq">Help</a></li>
                <li><a href="/auth/logout">Sign out</a></li>
            </ul>
        </section>
    </header>

    <section id="hero1">
        <img class="companyLogo" src="<%= user.logo %> " alt="">
        <h1><%= user.companyName %> <a class="btn" href="/company/input01">Ändern</a></h1>
        <p><%= user.typeOfIndustry %> </p>
        <h2><%= user.address.street %>, <%= user.address.postalcode %> <%= user.address.city %> <a class="btn"
                href="/company/input02">Ändern</a></h2>
        <p>Geschäftsführer: <%= user.firstName %> <%= user.lastName %></p>
        <p>Tischzahl: <%= user.tables.length %> <a class="btn" href="/company/input03">Ändern</a></p>
        <p>Speisekarte:
            <% user.pdf.forEach(elt => { %>
            <a href="<%= elt.url %> "><%= elt.title %> </a>
            <% }) %>
            <a class="btn" href="/company/input04">Ändern</a>
        </p>
    </section>
    <script>
        const showUserProfile = document.getElementById("showUserProfile")
        const toggleCompanyProfile = document.getElementById("toggleCompanyProfile")
        toggleCompanyProfile.addEventListener("click", (e) => {
            e.preventDefault()
            showUserProfile.classList.toggle('hide')
        })
    </script>
</body>

</html>